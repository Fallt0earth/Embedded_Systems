
#include <stdint.h>
#include <stdbool.h>
#include "driverlib/sysctl.h"

int blink(char color, int rate, int blinks){
    int i = 0;
    while(blinks < i){
    //make red
    if(color == 'r'){
        //turn on led
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_1, GPIO_PIN_1);
        //wait
        delay();
        //turn off led
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_1, 0x0);
    }
    //make blue
    else if(color == 'b'){
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_2, GPIO_PIN_2);
        delay();
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_2, 0x0);
    }
    //make green
    else{
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_3, GPIO_PIN_3);
        delay();
        GPIOPinWrite(GPIO_PORTF_BASE, GPIO_PIN_3, 0x0);

    }
    i++;
    }

}
void delay(){
    //hard to time accurately should be 1 branch, 1 int op
    //would be more but working directly with registers
    //think it would be just cr or cr/2
    for(volatile int i = 0; i < 16000000; i++){
    }
}

/**
 * main.c
 */
int main(void)
{
    //a 16.0-MHz internal circuit clock

    SysCtlPeripheralEnable(SYSCTL_PERIPH_GPIOF);

    //set the GPIO pins for outputting on led
    //red
    GPIOPinTypeGPIOOutput(GPIO_PORTF_BASE, GPIO_PIN_1);
    //blue
    GPIOPinTypeGPIOOutput(GPIO_PORTF_BASE, GPIO_PIN_2);

    while(1){
        blink('b', 3, 10)
    }

	return 0;
}

